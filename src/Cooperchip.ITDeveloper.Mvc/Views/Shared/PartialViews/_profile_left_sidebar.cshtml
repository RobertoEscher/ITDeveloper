@inject Cooperchip.ITDeveloper.Domain.Interfaces.IUserInContext _userInContext

<!--  .sidebar-panel -->
<div class="sidebar-panel">
    <h5 class="sidebar-panel-title">Profile</h5>
</div>
<!-- / .sidebar-panel -->


<div class="user-info clearfix">

    <div id="imgProfile">
        @if (_userInContext.IsAuthenticated() && !string.IsNullOrEmpty(_userInContext.GetUserImgProfilePath()))
        {
            <img src="/Uploads/@_userInContext.GetUserImgProfilePath()" alt="imagem de perfil" style="clear: both; float:left; margin-right: 10px;
                border: 2px solid #eeeeee; width: 50px; height:50px; border-radius: 50%;">
        }
        else
        {
            <img src="/img/avatars/foto-padrao.jpg" alt="avatar" style="clear: both; float:left; margin-right: 10px;
            border: 2px solid #eeeeee; width: 50px; height:50px; border-radius: 50%;">
        }
    </div>

    <span class="name">ITDeveloper</span>
    <div class="btn-group">
        <button type="button" class="btn btn-default btn-xs">
            <i class="l-basic-gear"></i>
        </button>
        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
            settings <span class="caret"></span>
        </button>
        <ul class="dropdown-menu right" role="menu">

            @if (_userInContext.IsAuthenticated())
            {
                <li><a asp-area="Identity" asp-page="/Account/Manage/Index" title="User Profile"><i class="fa fa-edit"></i>Perfil</a></li>
                <li><a asp-area="Identity" asp-page="/Account/Logout" title="Sair"><i class="fa fa-power-off"></i>Sair</a></li> }
            else
            {
                <li><a asp-area="Identity" asp-page="/Account/Login" title="Sair"><i class="fa fa-edit"></i>Entrar</a></li>
            }
            <li><a href="#"><i class="fa fa-edit"></i>Outra coisa</a></li>
            <li><a href="#"><i class="fa fa-money"></i>Mais algo</a></li>
            <li><a href="#"><i class="fa fa-credit-card"></i>Deposits</a></li>
            <li class="divider"></li>
            <li><a href="#"><i class="fa fa-power-off"></i>Mais uma</a></li>
        </ul>
    </div>
</div>
<!--  .sidebar-panel -->
